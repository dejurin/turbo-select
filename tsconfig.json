{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["dom", "es6", "dom.iterable", "esnext.intl", "esnext", "scripthost", "es2020.intl"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/*", "./parcel.d.ts", "./declarations.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", ".vscode", ".parcel-cache", "./dist/*"]
}
